{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "declaration": false,
    "target": "es2015",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "rootDir": "./src",
    "outDir": "./build",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
